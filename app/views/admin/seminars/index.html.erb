<div class="pull-right">
  <%= link_to("Add a seminar", new_admin_seminar_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @seminars.each do |seminar| %>
  <tr>
    <td>

          <%= render_seminar_status(seminar) %>

          <%= link_to(seminar.title, admin_seminar_path(seminar)) %>
    </td>

    <td>
      <%= link_to("Edit", edit_admin_seminar_path(seminar)) %>
      <%= link_to("Destroy", admin_seminar_path(seminar), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= seminar.created_at %>
    </td>
  </tr>
  <% end %>
</table>
